@model SupplierViewModel
<section>
    <div id="divCreateEditSupplier" class="modal fade" tabindex="-1" role="dialog">
        <div id="createEditSupplierModalDialog" class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="frmSupplier" method="post" asp-action="@(ViewData["action"])" asp-controller="Supplier">
                    <div class="modal-header">
                        <h4 class="modal-title"><text id="txtCreateEditTitle">@(ViewData["supplierFunction"])</text></h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>

                    <div class="modal-body">
                        <input id="hfSupplierId" type="hidden" asp-for="SupplierID" />
                        <input id="hfUrl" type="hidden" value="@(ViewData["url"])"/>
                        <div class="form-group">
                            <label for="inputSupplierCode">Supplier Code</label>
                            <input id="inputSupplierCode" asp-for="SupplierCode" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="inputSupplierName">Supplier Name</label>
                            <input id="inputSupplierName" asp-for="SupplierName" type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button id="btnCancel" type="button" class="btn btn-warning">Cancel</button>
                        <button id="btnAddAnother" type="button" class="btn btn-secondary">Add Another Supplier</button>
                        <button id="btnDone" type="button" class="btn btn-success">Done</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
